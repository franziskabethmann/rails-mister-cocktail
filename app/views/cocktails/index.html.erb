<div class="card-category", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1509807995916-c332365e2d9e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2171&q=80)">
  <h1>Cocktails</h1>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-md-6 col-lg-4">
        <div class="card" style="width: 18rem">
          <img src="<%= cocktail.photo %>" class="card-img-top" alt="..." style="background-image">
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <%= link_to "View Cocktail", cocktail_path(cocktail), class: "btn btn-primary" %>
            <%= link_to "âœ—", cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="add">
    <%= link_to "+ Add a Cocktail", new_cocktail_path, class: "btn btn-primary"%>
  </div>
</div>
