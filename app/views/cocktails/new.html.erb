<div class="container", id="new-cocktail">
  <h1>Add a Cocktail:</h1>
  <%= simple_form_for [@cocktail] do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add Cocktail", class: "btn btn-primary" %>
  <% end %>
  <p><%= link_to "Back to Cocktail overview", cocktails_path %></p>
</div>
