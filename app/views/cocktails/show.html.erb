<div class="container">
  <h1> <%= @cocktail.name %> </h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>: <%=dose.description %>
        <%= link_to "Delete", dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>

<p><%= link_to "+ Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
<p><%= link_to "Back to the cocktail overview", cocktails_path %></p>

</div>

